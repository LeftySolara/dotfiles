[settings]
; Limit the amount of update events within a set timeframe
; "Allow <throttle-limit> updates within <throttle-ms> of time"
throttle-limit = 3
throttle-ms = 60

;==============================================================================

[bar/main]
monitor = eDP1
dock = false

; Put the bar at the bottom of the screen
bottom = false

; Omit the % to specify the width in pixels
width = 100%
height = 30

; Offset defined in pixels
offset-x = 0
offset-y = 0

; Colors
background = #201017
foreground = #C2C8C6
linecolor = #A05369

; Borders
border-size = 0

; Used as a multiplier when adding spaces between elements
spacing = 0

; Height of underline and overline
lineheight = 3

; Number of spaces to add at the beginning/end of the bar
padding-left = 0
padding-right = 0

; Number of spaces to add before/after each module
module-margin-left = 2
module-margin-right = 0

; Fonts are defined using <FontName>;<Offset>
font-0 = Misc Tamsyn:size=10:antialias=true;0
font-1 = FontAwesome:size=10.2:antialias=true;0

; Locale used to localize module output
locale = sv_SE.UTF-8

; Position of the tray container
; If undefined, tray support will be disabled
;tray-position = right

; Restack the bar window and put it above the window manager's root
; Fixes the issue where the bar is being drawn over fullscreen windows
;wm-restack = i3

; Define what modules to output
modules-left = i3 mpd pianobar
;modules-center = label
modules-right = volume cpu cpuTemp memory wireless-network battery date time

;==============================================================================

