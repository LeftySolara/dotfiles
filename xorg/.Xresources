! ----- DPI Settings -----
Xft.dpi: 168
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb1

! ----- Font Definitions -----
#define Fontname  xft:Source Code Pro
#define Fontsize  18

URxvt*font:             Fontname:regular:pixelsize=Fontsize
URxvt*imFont:           Fontname:regular:size=Fontsize
URxvt*boldFont:         Fontname:bold:pixelsize=Fontsize
URxvt*italicFont:       Fontname:italic:autohint=true:pixelsize=Fontsize
URxvt*boldItalicFont:   Fontname:bold:italic:autohint=true:pixelsize=Fontsize

URxvt*scrollBar: false
URxvt*lineSpace: 2
URxvt.internalBorder: 15
URxvt.iso14755: False
URxvt.perl-ext-common: default,clipboard

URxvt.inputMethod: ibus
URxvt.preeditType: OverTheSpot

! ------------------------------------------------------------------------------
! ROFI Color theme
! ------------------------------------------------------------------------------
rofi.color-enabled: true
rofi.color-window: #2d2d2d, #c7ae95, #2d2d2d
rofi.color-normal: #2d2d2d, #c7ccd1, #2d2d2d, #c7ae95, #2d2d2d
rofi.color-active: #ae95c7, #2d2d2d, #2d2d2d, #c7ae95, #2d2d2d
rofi.color-urgent: #c795ae, #dc322f, #2d2d2d, #dc322f, #ae95c7
