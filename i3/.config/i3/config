set $mod Mod4
set $font pango:Clear Sans 7

# Set colors from Xresources
# The second listed color will be used as a fallback
set_from_resource $background   color0  #2d3338
set_from_resource $focused_bg   color1  #cbdde8
set_from_resource $foreground   color1  #cbdde8

set_from_resource $black        color0  #2d3338
set_from_resource $red          color1  #5C8FB6
set_from_resource $green        color2  #5C98CF
set_from_resource $yellow       color3  #6CAADB
set_from_resource $blue         color4  #73B6E3
set_from_resource $magenta      color5  #B3BC9D
set_from_resource $cyan         color6  #8CB6DD
set_from_resource $white        color7  #cbdde8

set_from_resource $black_alt    color8  #2d3338
set_from_resource $red_alt      color9  #5C8FB6
set_from_resource $green_alt    color10 #5C98CF
set_from_resource $yellow_alt   color11 #6CAADB
set_from_resource $blue_alt     color12 #73B6E3
set_from_resource $magenta_alt  color13 #B3BC9D
set_from_resource $cyan_alt     color14 #8CB6DD
set_from_resource $white_alt    color15 #cbdde8

# Class                 BORDER        BACKGROUND     TEXT        INDICATOR
client.focused          $background   $red           $background $black
client.focused_inactive $background   $background    $red        $background
client.unfocused        $background   $background    $red        $green
client.urgent $red $red $white $yellow

