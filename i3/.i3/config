set $blue           #7894A0
set $magenta        #6B97A0
set $cyan           #86A09E
set $white          #699CA0
set $light_grey     #90D6DC
set $dark_grey      #452B66

# workspace names
set $ws1 "1   term"
set $ws2 "2   dev"
set $ws3 "3   web"
set $ws4 "4   mail"
set $ws5 "5   media"
set $ws6 "6   doc"
set $ws7 "7   irc"
