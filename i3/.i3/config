set $ws9 "9   ftp"

# window borders
new_window none
smart_borders on

# gaps settings
gaps inner 20
gaps outer 0
smart_gaps on

# workspace assignments for specific applications
assign [class="Subl3"] $ws2
assign [class="QtCreator"] $ws2
assign [class="jetbrains-clion"] $ws2
assign [class="Firefox"] $ws3
assign [class="Thunderbird"] $ws4
assign [class="Vlc"] $ws5
assign [class="PlayOnLinux"] $ws5
assign [class="llpp"] $ws6
assign [class="Anki"] $ws8

# window rules
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [instance="float"] floating enable
for_window [class="^.*"] border pixel 0
for_window [class="Anki"] floating enable
for_window [class="Thunar"] floating enable
for_window [class="QuizMe"] floating enable
for_window [class="Steam"] floating enable
for_window [class="feh"] floating enable

# cycle back and forth when same workspace shortcut pressed
workspace_auto_back_and_forth yes

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font $font

# colors                BORDER        BACKGROUND     TEXT        INDICATOR
client.focused          $background   $green         $background $black
client.focused_inactive $background   $background    $green      $background
client.unfocused        $background   $background    $green      $secondary
client.urgent           $green        $green         $white      $green

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec termite

# kill focused window
bindsym $mod+Shift+q kill

# lock screen (i3lock-fancy)
bindsym $mod+p exec lock

# start dmenu
